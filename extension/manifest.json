{
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "icon/logo_16.png",
    "48": "icon/logo_48.png",
    "128": "icon/logo.png"
  },
  "description": "This extension for vk app Social Spider",
  "manifest_version": 2,
  "name": "Social Spider",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*",
    "activeTab",
    "storage",
    "notifications"
  ],
  "version": "1.0",
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": false,
    "page": "options.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon/logo_19.png"
    },
    "default_title": "Social Spider"
  }
}
